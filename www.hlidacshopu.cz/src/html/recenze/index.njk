{% extends 'layouts/master.njk' %}
{% set type = 'WebApplication' %}

{% block title %}Recenze na Hlídač shopů{% endblock %}

{% block preload %}
  <link rel="modulepreload" href="/assets/esm/reviews.js"/>
  <link rel="preload" href="https://data.hlidacshopu.cz/app/reviews.jsonld" as="fetch" crossorigin>
{% endblock %}

{% block styles %}
  <link rel="stylesheet" href="{{ "reviews.css" | assetUrl("stylesheets") }}">
{% endblock %}

{% block main %}
  <link property="sameAs" href="/">
  <meta property="name" content="Hlídač shopů">
  <meta property="applicationCategory" content="Web Extension">
  <section class="mdc-layout-grid layout-wrapper">
    <div class="mdc-layout-grid__inner">
      <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
        <h2>Recenze na rozšíření Hlídač shopů</h2>
      </div>
    </div>
    <div id="reviews" class="mdc-layout-grid__inner">
      <div class=loading-container>
        <div class=loader aria-label="Načítám data…">Recenze se načítají&hellip;</div>
      </div>
    </div>
  </section>
{% endblock %}

{% block scripts %}
  <script type="module" src="/assets/esm/reviews.js"></script>
{% endblock %}
